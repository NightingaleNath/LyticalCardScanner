<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Gradient overlay for some depth (you can adjust the colors to match the card's brand colors) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#EEEEEE"
                android:endColor="#DDDDDD"
                android:angle="270" />
        </shape>
    </item>
    <!-- Add a bottom border for a subtle effect -->
    <item android:top="-2dp" android:right="-2dp" android:left="-2dp">
        <shape>
            <solid android:color="#BAB8B8" />
            <corners android:bottomRightRadius="8dp" android:bottomLeftRadius="8dp" />
        </shape>
    </item>
</layer-list>
